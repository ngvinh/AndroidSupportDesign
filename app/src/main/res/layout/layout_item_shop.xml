<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_shop_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_shop_selector"
    android:padding="3dp"
    >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:background="@color/white"
        android:scaleType="matrix"
        android:layout_gravity="center"
        />
    <me.vinhdo.androidsuppordesign.custom.view.CustomTextView
        android:id="@+id/name_movie_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valdeen(TM) Best  Quality Silicone "
        android:maxLines="1"/>
</LinearLayout>